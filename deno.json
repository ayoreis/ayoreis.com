{
	"compilerOptions": {
		"noUncheckedIndexedAccess": true
	},

	"fmt": {
		"proseWrap": "preserve",
		"semiColons": false,
		"singleQuote": true,
		"useTabs": true
	},

	"imports": {
		"std/": "https://deno.land/std@0.199.0/"
	},

	"lock": false,

	"tasks": {
		"dev": "deno run --allow-net=0.0.0.0:8000 --allow-read=index.html,index.md,static/ --watch=index.html,index.md mod.ts"
	}
}
