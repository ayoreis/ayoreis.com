{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"dom.asynciterable",
			"deno.ns"
		]
	},

	"fmt": {
		"options": {
			"lineWidth": 60,
			"semiColons": false,
			"singleQuote": true,
			"useTabs": true
		}
	},

	"importMap": "./import-map.json",

	"tasks": {
		"dev": "deno run --watch --allow-net=0.0.0.0:8000 --allow-read=pages,static mod.ts"
	}
}
