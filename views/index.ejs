<!DOCTYPE html>
<html lang="en" dir="ltr">

    <%- include('partials/head') %>

    <body class="main">

        <%- include('partials/nav') %>

        <hr>

        <main class="main">
            <header class="main">
                <h1>Hello, world! <br> I am <a href="/about">Ayo</a>, <br> I make <a href="#posts">stuff</a>.</h1>
                <a class="arrow arrow--down" href="#posts"></a>
            </header>

            <section class="posts">
                <header class="posts">
                    <h2>I make stuff.</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dicta maxime est esse natus illum consequuntur.</p>
                    <nav class="filter">
                        <div class="search">
                            <label for="search">ðŸ”Ž Search.</label>
                            <input id="search" type="search" name="search" placeholder="...">
                        </div>
                        <div class="order">
                            <label for="order"></label>
                            <select name="order" id="order">
                                <option value="volvo">A - Z</option>
                                <option value="saab">Z - A</option>
                                <option value="mercedes">Newest - Oldest</option>
                                <option value="audi">Oldest - Newest</option>
                            </select>
                        </div>
                    </nav>
                </header>
                <div class="container">
                <%posts.forEach(post => {%>

                    <article class="post">
                        <h2><%= post.title %></h2>
                        <p><%= post.description %></p>
                        <a class="arrow arrow--right" href="/posts/<%= post._id %>"></a>
                        <button class="delete" data-post="<%= post.id %>">Delete.</button>
                    </article>

                <%})%>
                </div>
            </section>
        </main>

        <%- include('partials/footer') %>

    </body>
</html>
